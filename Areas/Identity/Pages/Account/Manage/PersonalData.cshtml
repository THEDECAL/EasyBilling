@page
@model EasyBilling.Areas.Identity.Pages.Account.Manage.PersonalDataModel
@{
    ViewData["Title"] = "Профиль - Персональная информация";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.FName"></label>
        <input asp-for="Input.FName" class="form-control" />
        <span asp-validation-for="Input.FName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.SName"></label>
        <input asp-for="Input.SName" class="form-control" />
        <span asp-validation-for="Input.SName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Patronymic"></label>
        <input asp-for="Input.Patronymic" class="form-control" />
        <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-primary">Изменить</button>
</form>

<partial name="_ValidationScriptsPartial" />